<div class="container mt-4">
  <h1>New Review for <%= @list.name %></h1>

  <% if @review.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@review.errors.count, "error") %> prevented this review from being saved:</h4>
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "form", list: @list, review: @review %>

  <hr>

  <%= link_to "Back to List", list_path(@list), class: "btn btn-secondary mt-3" %>
</div>
