<%= simple_form_for [list, review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :rating,
                as: :integer,
                input_html: { min: 1, max: 5 },
                label: "Rating (1~5)" %>

    <%= f.input :content,
                as: :text,
                label: "Your Review",
                input_html: { rows: 4 } %>
  </div>

  <div class="form-actions mt-3">
    <%= f.submit "Add Review", class: "btn btn-primary" %>
  </div>
<% end %>
