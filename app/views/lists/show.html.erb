<h1><%= @list.name %></h1>

<h2>All My Bookmarks</h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <strong><%= bookmark.movie.title %></strong>
      — <%= bookmark.comment %>
      <%= link_to "Remove This Bookmark",
                  bookmark_path(bookmark),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<p>
  <%= link_to "Add New Bookmark", new_list_bookmark_path(@list) %> |
  <%= link_to "Back to My Watch Lists", lists_path %>
</p>

<hr>
<h2>'Watch List' Reviews</h2>
<ul>
  <% @list.reviews.each do |review| %>
    <li>
      <strong><%= review.rating %>/5</strong> • <%= review.content %>
      <%= link_to "Remove this Review",
                  list_review_path(@list, review),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<h3>Add New Review</h3>

<%= simple_form_for [@list, Review.new] do |f| %>
  <%= f.input :rating, collection: 1..5, include_blank: false, label: "Choose a Review Rating (1~5)" %>
  <%= f.input :content, as: :text, label: "Add Your Review Here" %>
  <%= f.button :submit, "Submit Review", class: "btn btn-primary" %>
<% end %>
